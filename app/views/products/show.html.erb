<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
     
    </div>
    
    <div class="products">
      <%= render @reviews %>
    </div>

    <div class="col-sm-8">
    <%= form_for(:review, url:"/products/#{@product.id}/reviews") do |r| %>
      <dl class="dl-horizontal">
        <dt><%= r.label :rating %></dt>
        <dd><%= r.select :rating, [1,2,3,4,5], class: 'form-review' %></dd>
        <dt><br><%= r.label :description %></dt>
        <dd><br><%= r.text_area :description, class: 'form-review' %></dd>
        <dd><br><%= r.submit "Submit", class: 'btn btn-info' %></dd>
    <% end %>
  </div>


  </article>

</section>
